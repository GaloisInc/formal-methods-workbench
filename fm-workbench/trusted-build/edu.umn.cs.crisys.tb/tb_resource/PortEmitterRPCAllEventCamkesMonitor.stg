monitorCamkesCWriter(tname,qsz) ::= <<
#include <\u003C>stdbool.h<\u003E>
#include <\u003C>tb_toplevel_types.h<\u003E>
#include <\u003C>stdio.h<\u003E>

<tname> contents[<qsz>];
uint32_t front = 0;
uint32_t length = 0;

bool is_full(void) {
  return length == <qsz>;
}

bool is_empty(void) {
  return length == 0;
}

bool mon_dequeue(<tname> * m) {
  if (is_empty()) {
    return false;
  } else {
    *m = contents[front];
    front = (front + 1) % <qsz>;
    length--;
    return true;
  }
}

bool mon_enqueue(const <tname> * m) {
  if (is_full()) {
    return false;
  } else {
    contents[(front + length) % <qsz>] = *m;
    length++;
    qd_emit();
    return true;
  }
}
>>

