monitorCamkesWriter(str_component_name,port) ::= <<
import "../../interfaces/<port.inputMonitorInterfaceName>.idl4";
import "../../interfaces/<port.outputMonitorInterfaceName>.idl4";
component <str_component_name> {

  provides <port.outputMonitorInterfaceName> enq;
  provides <port.inputMonitorInterfaceName> deq;
  emits QueuedData qd;
  has mutex q;
}
>>


monitorCamkesCWriter(str_type_name, str_qsize, str_types_include) ::= <<
#include <\u003C>stdio.h<\u003E>
#include <\u003C>stdbool.h<\u003E>
#include <\u003C><str_types_include><\u003E>;

<str_type_name> contents[<str_qsize>];
static uint32_t front = 0;
static uint32_t length = 0;

static bool is_full(void) {
  return length == <str_qsize>;
}

static bool is_empty(void) {
  return length == 0;
}

bool deq_dequeue(<str_type_name> * m) {
  q_lock();
  if (is_empty()) {
    q_unlock();
    return false;
  } else {
    *m = contents[front];
    front = (front + 1) % <str_qsize>;
    length--;
    q_unlock();
    return true;
  }
}

bool enq_enqueue(const <str_type_name> * m) {
  q_lock();
  if (is_full()) {
    q_unlock();
    return false;
  } else {
    contents[(front + length) % <str_qsize>] = *m;
    length++;
    qd_emit();
    q_unlock();
    return true;
  }
}

>>

monitorCamkesEventHandler(port,unlock) ::= <<

static void q<port.name>_handler(void * unused) {
  <unlock>
  q<port.name>_reg_callback(q<port.name>_handler, NULL);
}

>>